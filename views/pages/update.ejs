                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved |</a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Footer Section End -->
</body>

<script>
    $('#addBtnTag').click(function(){
        $('#tagList').append(`<input type="text" class="form-control my-3" name="tags[]" id="tags">`)
    })
    $('#addBtnDesc').click(function(){
        $('#descList').append(`<input type="text" class="form-control my-3" name="description[]">`)
    })
    $('#addBtnIns').click(function(){
        $('#insList').append(`<input type="text" class="form-control my-3" name="instructions[]">`)
    })
    
   
</script>