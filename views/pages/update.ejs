        <!-- ##### Breadcumb Area Start ##### -->
        <div class="breadcumb-area bg-img bg-overlay" style="background-image: url(static/img/bg3.jpg);">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-12">
                        <div class="breadcumb-text text-center">
                            <h2>Update Recipe</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
        <!-- ##### Breadcumb Area End ##### -->
        <nav class="navbar navbar-expand-sm navbar-dark sticky-top" style="background-color: #a14d12;;">
            <a class="navbar-brand px-4" href="#">
                <img src="/static/img/logo.png" width="100" height="60" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto" style="font-family: Marcellus SC; font-size: 23px">
                    <li class="nav-item active">
                        <a class="nav-link" href="/home">Home<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            Posts
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/recipes/appetizers">Appetizers</a>
                            <a class="dropdown-item" href="/recipes/main_course">Main Course</a>
