<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <br><br><br>
    <div id="demo" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="static/img/car_bg1.jpg" class="d-block w-100" alt="Cover">
            </div>
            <div class="carousel-item">
                <img src="static/img/car_bg2.jpg" class="d-block w-100" alt="Cover2">

            </div>
            <div class="carousel-item">
                <img src="static/img/car_bg3.jpg" class="d-block w-100" alt="Cover3">
            </div>
        </div>
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>

    <hr class="style_1">

    <!-- Page Top Recipe Section Begin -->
    <section class="page-top-recipe">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 order-lg-2">
                    <div class="pt-recipe-item large-item">
                        <div class="pt-recipe-img set-bg">
                            <a href="/about">
                                <img src="static/img/home-bg.jpg">
                                <i class="fa fa-plus"></i>
                        </div>
                        <div class="pt-recipe-text">
                            <span class="d-sm-inline-block pb-2">Nothing beats a "Dining with a view"!</span>
                            <h3>Top of Cebu Restaurant's sumptuous dishes.</h3>
                        </div>
                    </div>
                </div>
                <% var appetizers = data.filter(recipe => recipe.category == "appetizers") %>
                <% var desserts = data.filter(recipe => recipe.category == "desserts") %>
                <% var main_course = data.filter(recipe => recipe.category == "main_course") %>
                <div class="col-lg-3 col-md-6 order-lg-1">
                    <div class="pt-recipe-item">
                        <div class="pt-recipe-img set-bg">
                           
                            <a href="/recipes/main_course/<%= main_course[0]._id %>">
                                <img src="<%= main_course[0].image %>" alt="Low Carb Keto Lasagna" height="311">
                                <i class="fa fa-plus"></i>
                        </div>
                        <div class="pt-recipe-text">
                            <h3 class="font-weight-bold" style="font-size: 20px; font-family: Atma">
                                <%= main_course[0].name %></h3>
                        </div>
                    </div>
                    <div class="pt-recipe-item">
                        <div class="pt-recipe-img set-bg">
                            <a href="/recipes/appetizers/<%= appetizers[1]._id %>%>">
                                <img src="<%= appetizers[1].image %>" alt="Cheese Sticks" height="311"
                                    width="280">
                                <i class="fa fa-plus"></i>  
                        </div>
                        <div class="pt-recipe-text">
                            <h3 class="font-weight-bold" style="font-size: 20px; font-family: Atma">
                                <%= appetizers[1].name %>
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 order-lg-3">
                    <div class="pt-recipe-item">
                        <div class="pt-recipe-img set-bg">
                            <a href="/recipes/desserts/<%= desserts[1]._id%>">
                                <img src="<%= desserts[1].image %>" alt="Mango Graham Cake" height="311">
                                <i class="fa fa-plus"></i>
                        </div>
                        <div class="pt-recipe-text">
                            <h3 class="font-weight-bold" style="font-size: 20px; font-family: Atma">
                                <%= desserts[1].name%></h3>
                        </div>
                    </div>
                    <div class="pt-recipe-item">
                        <div class="pt-recipe-img set-bg">
                            <a href="/recipes/main_course/<%= main_course[1]._id %>">
                                <img src="<%= main_course[1].image%>" alt="Parmesan Chicken Nuggets"
                                    height="311">
                                <i class="fa fa-plus"></i>
                        </div>
                        <div class="pt-recipe-text">
                            <h3 class="font-weight-bold" style="font-size: 20px; font-family: Atma">
                                <%= main_course[1].name %></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Top Recipe Section End -->
    <!-- ##### Top Category Area Start ##### -->
    <section class="top-category-area section-padding-80-0">
        <div class="container">
            <div class="row">
                <!-- Top Category Area -->
                <div class="col-12 col-lg-6">
                    <div class="single-top-category">
                        <img src="static/img/bg2.jpg" alt="Bagbagis">
                        <!-- Content -->
                        <div class="top-cta-content">
                            <h3>Appetizers</h3>
                            <h6>Satisfy your cravings with these snacks</h6>
                            <a href="/recipes/appetizers" class="btn btn-success">Discover All Recipes</a>
                        </div>
                    </div>
                </div>
                <!-- Top Category Area -->
                <div class="col-12 col-lg-6">
                    <div class="single-top-category">
                        <img src="static/img/bg3.jpg" alt="Crispy Pata">
                        <!-- Content -->
                        <div class="top-cta-content">
                            <h3>Main Dish</h3>
                            <h6>Crunchy, Juicy &amp; Savory Fave</h6>
                            <a href="/recipes/main_course" class="btn btn-success">Discover All Recipes</a>
